// write a program get number frm user hallow rectangle 

#include <stdio.h>
int getNumberFromUser(){
 int number;
 printf("Enter a number ");
 scanf("%d", & number );
 return number ;
}
int hallowRectangle(int a){
   for(int i=1;i<=a;i++){
   for(int j=1;j<=a*2;j++){
  if(i==1||j==1||i==a||j==a*2){
    printf("*\t");
   }
   else{
       printf("\t");
   }
   }
   printf("\n");
   }
  
}
void main(){
    hallowRectangle(getNumberFromUser());
}
