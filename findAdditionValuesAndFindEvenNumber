// write a program to get number from user and add them find the value is even number print it on console 
#include <stdio.h>
int getNumberFromUser(){
    int i;
    scanf("%d",&i);
    return i;
}
int findAdditionThem(int a,int b){
    return (a + b);
}
int checkEvenNumber(int c){
    if (c % 2 == 0){
        printf("Its even number ");
    }else{
           printf("Its odd number ");
    }
}
void main() {
    printf("Enter a first number ");
    int number1 = getNumberFromUser();
    printf("Enter a first number ");
    int number2 = getNumberFromUser();
    int addition =  findAdditionThem(number1,number2);
    printf ("addition value is %d\n",addition);
    checkEvenNumber(addition);
  
}
