#include <stdio.h>
int getNumberFromUser(){
    int number;
    scanf("%d",&number);
    return number;
}
int identifyTheArea(int a){
    return (a*a);
}
int identifyTheCircumference(int a){
    return 4*(a*a);
}
void main(){
    printf("enter the side of square ");
    int a=getNumberFromUser();
    int area = identifyTheArea(a);
    printf("Area of square is %d\n",area);
    int circumference = identifyTheCircumference(a);
    printf("Circumference of square is %d",circumference);
}
