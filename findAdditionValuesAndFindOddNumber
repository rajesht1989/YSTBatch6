//// write a program to get number from user and add them and find odd number print it on console 
#include <stdio.h>
int getNumberFromUser(){
    int i;
    scanf("%d",&i);
    return i;
}
int findAdditionValue (int a,int b){
    return (a + b);
}
int checkOddNumber(int c){
    if (c % 2 != 0){
        printf("Its odd value ");
    }
    else{
         printf("Its even value ");
    }
}
void main() {
    printf("Enter a first number ");
    int number1 = getNumberFromUser();
    printf("Enter a second number ");
    int number2 = getNumberFromUser();
    int addtion = findAdditionValue(number1,number2);
       printf("Addition value is %d\n",addtion);
   checkOddNumber(addtion);
}
