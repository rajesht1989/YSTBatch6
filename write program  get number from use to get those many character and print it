//write a program get number from user and get those many character and print it
#include<stdio.h>
int getNumberFromUser(){
int number;
scanf("%d",&number);
return number;    
}
char getLetterFromUser(){
    char letter;
    int i;
    scanf("%c ",&letter);
    return letter;
}
void identifyVowels(int a){
    int findVowels=0;
    for(int i=0;i<a;i++){
    printf(" enter a letter \n");
    char s=getLetterFromUser();
    if(s=='A'||s=='a'||s=='E'||s=='e'||s=='I'||s=='i'||s=='O'||s=='o'||s=='U'||s=='u')findVowels++;
}
 printf("vowels is %d",findVowels );
 }
 void main(){
     printf("enter a number");
     char a=getNumberFromUser();
     identifyVowels(a);
 }
