// Online C compiler to run C program online
#include <stdio.h>
float getNumberFromUser(){
float number;
scanf("%f",&number);
return number;
}
float identifyTriangleArea(float b,float h)
{
    return(b*h)/2;
}
void main()
{
  printf (" enter a base ");
  float b=getNumberFromUser();
  printf (" enter a height ");
  float h=getNumberFromUser();
  float trianglearea=identifyTriangleArea(b,h);
  printf (" trianglearea is %f",trianglearea);
}
